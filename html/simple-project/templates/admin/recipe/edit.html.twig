{% extends 'admin/admin.html.twig' %}


{% block title %}
{{recipe.title}}
{% endblock %}

{% block body %}

<h1>
	{{recipe.title}}
</h1>

{{ form_start(form) }}

<div class="d-flex flex-column">
	{{ form_row(form.title) }}
	{{ form_row(form.slug) }}
	{{ form_row(form.category) }}
	{{ form_row(form.content) }}
</div>

<div class="d-flex gap-3">
	{{ form_row(form.duration) }}
</div>
{{ form_end(form) }}

<p>
	<!--
	<img src="/images/recettes/{{ recipe.thumbnail }}"
		alt="{{ recipe.thumbnail }}">
	-->

	<img src="{{ vich_uploader_asset(recipe, 'thumbnailFile') }}"
