{% extends 'base.html.twig' %}

{% block title %}Hello RecipeController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">

		<h1>Recipes</h1>
		<ul>
			{% for id, recipe in recipes %}
				<li>{{ id }} => [{{ recipe.id }}, {{ recipe.title }}]</li>
			{% endfor %}
		</ul>


		<ul>
			<li><a href="{{ url('recipe.show', {id:32, slug:'pate-bolognaise'}) }}">Pate bolognaise</a></li>
		</ul>
	</div>
{% endblock %}
