{% extends 'admin/base.html.twig' %}

{% block title %}{{ recipe.title }}
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>{{ recipe.title }}</h1>
		<p>
			{{ recipe.content | nl2br }}
		</p>
      {{ dump(recipe) }}
	</div>
{% endblock %}
