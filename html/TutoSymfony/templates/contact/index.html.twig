		<h1>Nous contacter</h1>
		<a href="http://localhost:8025/" target="_blank" class="link-secondary">Serveur virtuel smtp (Mailpit)</a>
	</div>

	{{ form_start(formContact) }}
	<div class="row">
		<div class="col-sm">
			{{ form_row(formContact.name) }}
